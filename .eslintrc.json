{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react",
    "react-hooks",
    "react-refresh",
    "@react-three"
  ],
  "settings": {
    "react": {
      "version": "18.3" 
    }
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error", 
    "react-hooks/exhaustive-deps": "warn", 
    "@react-three/react-three-fiber/no-unused-vars": "warn", 
    "react/no-unknown-property": "off",
  }
}
